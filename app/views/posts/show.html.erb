
<div class="contents">
  <div class="post col-sm-12 col-md-5 col-lg-5">
    <div class="post__img">
      <img src="https://cdn.pixabay.com/photo/2017/11/10/05/48/user-2935527_1280.png" width="200" height="200">
    </div>
    <div class="post__under">
      <p class="post__title">
        <%= @post.title %>
      </p>
      <p class="post__text">
        <%= @post.text %>
      </p>
      <p class="post__date">
        2018/03/13
      </p>
    </div>
  </div>

  <div class="comments col-sm-12 col-md-7 col-lg-7">
    <div class="comment">
      <div class="comment__header">
        <h3>コメント</h3>
      </div>
      <div class="comment__body"></div>
    </div>
    <div class="comment__form"></div>
  </div>
</div>
