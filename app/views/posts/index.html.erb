
  <div class="contents">
    <div class="row">
      <% @posts.each do |post| %>
      <div class="post col-sm-4 col-md-4 col-lg-4">
        <div class="post__img">
          <img src="https://cdn.pixabay.com/photo/2017/11/10/05/48/user-2935527_1280.png" width="200" height="200">
        </div>
        <div class="post__under">
          <p class="post__title">
            <%= post.title %>
          </p>
          <p class="post__date">
            2018/03/13
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
