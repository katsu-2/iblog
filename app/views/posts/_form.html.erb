<div class="form__field">
  <div class="form">
    <%= form_for (@post) do |f| %>

    <div class="form-group">
      <%= f.label :タイトル %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :本文 %><br />
      <%= f.text_area :text, class: "form-control", rows: 5 %>
    </div>

    <div class="form-group">
      <%= f.label :画像 %><br />
      <%= f.file_field :image, class: "image", id: 'post_img' %>
    </div>

    <p>
      <%= f.submit "依頼する", class: "btn btn-primary" %>
    </p>

    <% end %>
  </div>
</div>
