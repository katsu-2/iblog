<div class="form__field">
  <div class="form">
    <%= form_for (@post) do |f| %>

      <div class="form-group">
        <%= f.label :タイトル %><br />
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :本文 %><br />
        <%= f.text_area :text, class: "form-control", rows: 5 %>
      </div>

      <div class="form-group">
        <%= f.label :サムネイル %>

        <div id="img_field" onClick="$('#file').click()">
          <% if @post.image.url.present? %>
            <%= image_tag @post.image.url, class: "image_post" %>
          <% else %>
            <%= fa_icon 'image', class: "image_icon" %>
          <% end %>
        </div>
        <%= f.file_field :image, class: "image", style: "display:none" ,id: 'file' %>

      </div>

      <p class="form-submit">
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      </p>

    <% end %>
  </div>
</div>
